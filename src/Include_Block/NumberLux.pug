.block-form.block-number-lux
    form.search-form.search-form-number-lux
        header.search-form__block-header.block-header-number-lux
            h1.search-form__header__h1.header-number-lux
                |№
                span 888
                span Люкс
            .searh-form__header__block-paragraph.paragraph-header-lux
                p
                    | 9 990₽
                    span в сутки
        main.search-form__container
            section.search-form__container-date
                label.search-form__label
                    |Прибытие
                    input.search-form__input.datepicker-here(
                        type = "text"
                        placeholder = "ДД.ММ.ГГГГ"
                        id = "arrivalLux"
                        data-range = "true"
                        data-multiple-dates-separator=" - "
                        name = "fieldArrival"
                    )
                label.search-form__label
                    |Выезд
                    input.search-form__input.datepicker-here(
                        type = "text"
                        placeholder = "ДД.ММ.ГГГГ"
                        id = "departureLux"
                        name = "fieldDeparture"
                    )
            section.search-form__container-guests
                label.search-form__label
                    |Гости
                    input.search-form__input.input-guest(
                        type = "text"
                        placeholder = "Сколько гостей"
                        id = "guest"
                        name = "fieldGuests"
                    )
        .search-form__container-button
            button.search-form__button
                span Подобрать номер
                img(src="/assets/img/arrow_forward_batton.png")
